<div class="card-body">
    <h3 class="card-title alert-success py-3 px-3 rounded-2">@Model.Title</h3>
    <div class="card-text p-3">@Model.Content</div>

    <div class="d-flex flex-row justify-content-between mt-5">
        <div class="d-flex justify-content-center align-items-center mb-0"><i class="bi bi-globe px-2"></i>@Model.Category.CategoryName</div>
        <div class="d-flex justify-content-center align-items-center mb-0"><i class="bi bi-person px-2"></i>@Model.User.UserName</div>
        <span class="alert d-flex justify-content-center align-items-center mb-0">@Model.Date</span>
    </div>
</div>